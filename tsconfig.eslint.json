{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022", "DOM"],
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"include": [
		"app/src/**/*",
		"client/src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
